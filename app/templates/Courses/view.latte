{block content}

<div class="row">
  <header class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="float-left">
      <h2 n:block=title>{$course->label}</h2>
    </div>
    <div class="float-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#courseForm">
        <i class="fas fa-edit"></i> Upraviť
      </button>
    </div>
  </header>
</div>

<!-- Modal -->
<div class="modal fade" id="courseForm" tabindex="-1" role="dialog" aria-labelledby="courseModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="courseModalLabel">Upraviť kurz</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {control courseForm}
      </div>
    </div>
  </div>
</div>