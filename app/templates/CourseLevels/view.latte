{block content}

<div class="row">
  <header class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="float-left">
      <h1 n:block=title>{$courseLevel->label}</h1>
      <p n:block=description>Úprava kurzu</p>
    </div>
    <div class="float-right">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#courseLevelForm">
        <i class="fas fa-edit"></i> Upraviť
      </button>
    </div>
  </header>
</div>

<!-- Modal -->
<div class="modal fade" id="courseLevelForm" tabindex="-1" role="dialog" aria-labelledby="courseLevelModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="courseLevelModalLabel">Upraviť názov úrovne</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {control courseLevelForm}
      </div>
    </div>
  </div>
</div>