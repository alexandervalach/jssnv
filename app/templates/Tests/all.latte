{block content}

<section id="tests" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <div class="float-left">
  	<h2 n:block="title">Testy</h2>
  </div>
  <div class="float-right">
    <button type="button" class='btn btn-success' data-toggle="modal" data-target="#testForm">
      <i class="fas fa-plus"></i> Pridať
    </button>
  </div>
  <div class="table-responsive" n:if="$tests->count() > 0">
    <table class="table">
      <thead>
        <tr>
          <th>Názov</th>
          <th colspan="2" class="text-center">Akcie</th>
        </tr>
      </thead>
      <tbody>
        {foreach $tests as $test}
          <tr>
            <td>
              <a n:href="view, $test->id" class="text-success" target="_blank">{$test->label}</a>
            </td>
            <td class="text-center">
              <a n:href="Questions:all, $test->id" class="text-success">
                <i class="fas fa-pencil-alt"></i>
              </a>
            </td>
            <td class="text-center text-danger">
              <i class="fas fa-trash"></i>
            </td>
          </tr>
        {/foreach}
      </tbody>
    </table>
  </div>
</section>

<!-- Modal -->
<div class="modal fade" id="testForm" tabindex="-1" role="dialog" aria-labelledby="testFormLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="testFormLabel">Pridať test</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {control testForm}
      </div>
    </div>
  </div>
</div>