{block content}

{control modalDialog 'remove', 'Odstrániť sekciu',
    "Naozaj chcete odstrániť sekciu <span class=\"text-danger text-uppercase\">$section->name</span> ?",
    'danger', 'Odstrániť', 'remove'}

<div class="row">
    <article>
        <header class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="pull-left">
                <h2>{$section->name}</h2>
            </div>
            <div class="pull-right">
                <p class="text-danger">
                    <a n:if="$user->loggedIn" data-toggle="modal" data-target="#removeModal" 
                       class="btn btn-default">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </p>
            </div>
        </header>
        <main class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <a n:if="$user->loggedIn" n:href="edit, $section->id">
                (&hellip;<span class="glyphicon glyphicon-pencil"></span>)
            </a>
            {if $post != null}
                <p n:if="$post != null">{$post->content|noescape}</p>
            {/if}
        </main>
    </article>
</div>